{
  "mcpServers": {
    "biolink": {
      "transport": "stdio",
      "command": "uv",
      "args": [
        "run",
        "python",
        "-c",
        "from biolink_mcp.server import main; main()",
        "run"
      ]
    },
    "name-resolver": {
      "transport": "stdio",
      "command": "uv",
      "args": [
        "run",
        "-m",
        "name_resolver_mcp.server",
        "run"
      ]
    },
    "nodenormalizer": {
      "transport": "stdio",
      "command": "uv",
      "args": [
        "run",
        "-m",
        "nodenormalizer_mcp.server",
        "run"
      ]
    },
    "robokop": {
      "transport": "stdio",
      "command": "uv",
      "args": [
        "run",
        "-m",
        "robokop_mcp.server",
        "run"
      ]
    }
  }
}